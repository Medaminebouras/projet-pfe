<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".client_inscription">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="-1000dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="424dp"
                android:layout_height="217dp"
                android:layout_marginTop="-60dp"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/whatsapp_image_2023_02_24_at_17_00_16__1__removebg_preview" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Inscription client"
                android:layout_gravity="center"
                android:gravity="center"

                android:textSize="30sp"
                android:textAlignment="center"
                android:textColor="#0099dd"
                android:textStyle="bold"


                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:layout_marginStart="32dp"

                >

                <TextView
                    android:textColor="#0099dd"
                    android:textSize="18sp"
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Code Client"


                    />

                <EditText
                    android:code_client="@+id/editTextTextPersonName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:textColor="#0099dd"
                     android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:hint="Entrez le code"

                    android:ems="10"
                    android:background="@drawable/background_text"
                    android:inputType="textPersonName"


                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:orientation="vertical"

                >

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ID Client"
                    android:textColor="#0099dd"
                    android:textSize="18sp"


                    />

                <EditText
                    android:Nom_client="@+id/editTextTextPersonName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/background_text"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="Entrez le nom"
                    android:inputType="textPersonName"
                    android:textAlignment="center"
                    android:textColor="#0099dd"

                    android:textSize="16sp"


                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:orientation="vertical"

                >

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Adresse"
                    android:textColor="#0099dd"
                    android:textSize="18sp"


                    />

                <EditText
                    android:adresse="@+id/editTextTextPersonName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/background_text"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="Entrez l'adresse"
                    android:inputType="textPersonName"
                    android:textAlignment="center"
                    android:textColor="#0099dd"

                    android:textSize="16sp"


                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:orientation="vertical"

                >

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contact"
                    android:textColor="#0099dd"
                    android:textSize="18sp"


                    />

                <EditText
                    android:id="@+id/editTextTextPersonName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/background_text"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="06********"
                    android:inputType="textPersonName"
                    android:textAlignment="center"
                    android:textColor="#0099dd"

                    android:textSize="16sp"


                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>